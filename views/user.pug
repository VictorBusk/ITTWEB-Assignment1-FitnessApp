extends layout

block content
    h1=title

    h2='Existing'
    ul
    each element in workouts
        li= element.user

    h2='Create'
    form(method='POST' action='/user/')
        div.form-group
            label(for='name')
            input#name.form-control(type='text', placeholder='Name' name='name' required='true' value=(undefined===user ? '' : user.name) )
            button.btn.btn-primary(type='submit') Add user
    if errors
        ul
            for error in errors
                li!= error.msg