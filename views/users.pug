extends layout

block content
    ul.breadcrumb
        li
            a(href="../") Home
        li.active= title

    if errors
        div.alert.alert-dismissible.alert-danger
            ul
                for error in errors
                    li!= error.msg

    div.bs-docs-section
        div.row
            div.col-lg-12
                div.page-header
                    h1#typography= title
                div.bs-component
                    table.table.table-striped.table-hover
                        thead
                            tr
                                th User
                                th
                        tbody
                            for object in users
                                tr
                                    td= object.name
                                    td
                                        div.btn-group.btn-sm
                                            a.btn.btn-primary.btn-sm(href="/workouts/" + object._id) Workouts
                                        div.btn-group.btn-sm
                                            a.btn.btn-warning.btn-sm(href="/users/edit/" + object._id) Edit
                                            a.btn.btn-danger.btn-sm(href="/users/delete/" + object._id) Delete
                            form.form-inline(method='POST' action='/users/')
                                input#user(type='hidden', name='user', value= userid)
                                tr
                                    td
                                        input#name.form-control(type='text', placeholder='Name' name='name' required='true' value=(undefined === user ? '' : user.name) )
                                    td
                                        div.btn-group.btn-sm
                                            button.btn.btn-success.btn-sm(type='submit') Save user



